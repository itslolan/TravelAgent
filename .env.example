BROWSERBASE_API_KEY=your_browserbase_api_key_here
BROWSERBASE_PROJECT_ID=your_browserbase_project_id_here
HYPERBROWSER_API_KEY=your_hyperbrowser_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
PORT=3001
NODE_ENV=development

# Browser Provider Selection
# Options: 'browserbase' or 'hyperbrowser'
BROWSER_PROVIDER=browserbase

# External Proxy Configuration (Optional - e.g., RoundProxies.com)
# If these are set, BrowserBase will use your external proxy instead of built-in proxies
# Leave blank to use BrowserBase's built-in proxies
PROXY_SERVER=
PROXY_USERNAME=
PROXY_PASSWORD=

# Minion Creation Delay (milliseconds)
# Delay between creating each browsing session when multiple minions are needed
# Set to 0 for no delay (all sessions created simultaneously)
# Recommended: 10000 (10 seconds) to avoid rate limiting
MINION_SESSION_DELAY=10000

# CAPTCHA Solving Strategy
# Set to 'true' to use Gemini 2.5 Computer Use (requires Python microservice)
# Set to 'false' to let BrowserBase handle CAPTCHA solving (default)
USE_GEMINI_FOR_CAPTCHA=false

# Python CAPTCHA Solver Service (if using Gemini)
# Local development: Use PYTHON_CAPTCHA_SOLVER_URL
PYTHON_CAPTCHA_SOLVER_URL=http://localhost:5000
# Render Blueprint: PYTHON_CAPTCHA_SOLVER_HOST is auto-set (don't add here)
# Manual Render: Set PYTHON_CAPTCHA_SOLVER_URL to full service URL
